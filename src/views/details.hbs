<h1>{{name}}</h1>
<img class="cube" src={{imageUrl}}>
<div class="details">
    <p><span>Description:</span>{{description}}</p>
    <p><span>Difficulty level:</span> {{difficultyLevel}}</p>
    <a class="btn" href="/">Back</a>
    <a class="btn" href="/cube/attach/acessory/{{_id}}">Attach new acessory</a>
</div>
<h2>Accessories</h2>
<div class="accessories">
    {{#if accessories}}
    {{#each accessories}}
    <div class="accessory">
        <img src={{accessory.imageUrl}} alt="stickerName">
        <h3>{{accessory.name}}</h3>
        <p>{{accessory.description}}</p>
    </div>
    {{/each}}
    {{else}}
    <h3 class="italic">This cube has no accessories yet..</h3>
    {{/if}}
</div>